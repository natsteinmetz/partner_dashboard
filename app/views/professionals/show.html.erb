<div class="row-fluid">
  <div class="span2">
    <%= gravatar_image_tag @professional.email, alt: @professional.name %>
  </div>
  <div class="span6">
    <h2>
      <%= @professional.name %>
    </h2>
    <table class="profile_contact_info">
      <% unless current_user.is_student? && (current_user.connected? @professional.partners.first ) %>
      <tr>
        <th scope="row" style="text-align: left">Phone Number</th>
        <% if @professional.phone_number.nil? || @professional.phone_number.empty? %>
          <td>None</td>
        <% else %>
          <td><%= @professional.phone_number %></td>
        <% end %>
      </tr>
      <tr>
        <th scope="row" style="text-align: left">Email</th>
        <td><%= mail_to @professional.email %></td>
      </tr>
      <% end -%>
      <% unless (@professional.links.nil? || @professional.links.empty?) %>
      <tr>
        <th scope="row" style="text-align: left">Links</th>
          <td>
            <% @professional.links.split(",").each do |link| %>
              <%= link_to(link, link) %><br>
            <% end %>
          </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<div class="row-fluid">
  <div class="span8">
    <h3>Bio</h3>
    <p>
      <% if (@professional.bio.empty? || @professional.bio.nil?) %>
        None provided...
      <% else %>
        <%= @professional.bio %>
      <% end %>
    </p>
  </div>
</div>

<% if current_user.is_admin? || (current_user.is_partner? && (@professional.email == current_user.email)) %>
  <div class="row-fluid">
    <%= link_to "Edit Profile", edit_professional_path(@professional), class: "btn btn-primary" %>
  </div>
<% end %>

