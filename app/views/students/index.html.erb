<div class="row-fluid">
  <h1>Code Fellows Students</h1>
</div>

<div class="row-fluid">
  <% if @students.empty? %>
  Sorry, there aren't any students here yet...
  <% else %>
  <table id="students" class="table">
    <thead>
      <tr>
        <th>For Hire</th>
        <th>
          <div>Name <i id="name-filter-toggle" class="icon-filter toggle"></i></div>
          <div id="name-filter" class="filter input-prepend">
            <span class="add-on"><i class="icon-filter"></i></span>
            <input type="text" class="search input-medium" placeholder="Filter by name" />
          </div>
        </th>
        <th>
          <div>Skills <i id="skills-filter-toggle" class="icon-filter toggle"></i></div>
          <div id="skills-filter" class="filter input-prepend">
            <span class="add-on"><i class="icon-filter"></i></span>
            <input type="text" class="search input-medium" placeholder="Filter by skills" />
          </div>
        </th>
        <th>
          <div>Courses <i id="courses-filter-toggle" class="icon-filter toggle"></i></div>
          <div id="courses-filter" class="filter input-prepend">
            <span class="add-on"><i class="icon-filter"></i></span>
            <input type="text" class="search input-medium" placeholder="Filter by courses" />
          </div>
        </th>
      </tr>
    </thead>
    <tbody class="list">
      <%= render @students %>
    </tbody>
  </table>
  <% end %>
</div>

<script>
  var studentsList;

  function MultiFilter(searchClasses) {
    return function(e) {
      studentsList.filter(function(item){

        var keepItem = true;
        searchClasses.forEach(function(searchClass){
          var cellText = $(item.elm).find('td.' + searchClass).text().toLowerCase();
          var searchString = $('#' + searchClass + '-filter input').val().toLowerCase();
          if(cellText.search(searchString) === -1) {
            keepItem = false;
            return;
          }
        });
        console.log(keepItem);
        return keepItem;
      });
    }
  }

  $(document).ready(function(){
    var listOptions = {
      valueNames: ['name'],
      searchClass: 'search-stuff'
    }
    studentsList = new List('students', listOptions);

    var filterAll = MultiFilter(['name', 'skills', 'courses']);

    var $nameFilter = $('#name-filter');
    var $skillsFilter = $('#skills-filter');
    var $coursesFilter = $('#courses-filter');

    $nameFilter.find('input').on('input', filterAll);
    $skillsFilter.find('input').on('input', filterAll);
    $coursesFilter.find('input').on('input', filterAll);

    $('#name-filter-toggle').on('click', function(){
      $nameFilter.toggle();
    });
    $('#skills-filter-toggle').on('click', function(){
      console.log("skills");
      $skillsFilter.toggle();
    });
    $('#courses-filter-toggle').on('click', function(){
      $coursesFilter.toggle();
    });

  });
</script>
