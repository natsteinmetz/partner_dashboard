<div class="row-fluid">
  <div class="span2">
    <%= gravatar_image_tag @student.email, alt: @student.name %>
  </div>
  <div class="span6">
    <h2>
      <%= @student.name%>
      <% if @student.for_hire %>
        <span class="label label-success">For Hire!</span>
      <% end %>
    </h2>
    <table class="profile_contact_info">
      <% if (current_user.has_role? :student && (current_user.student.id == @student.id)) ||
            (current_user.connected? (@student)) %>
      <tr>
        <th scope="row" style="text-align: left">Phone Number</th>
        <td><%= @student.phone_number %></td>
      </tr>
      <tr>
        <th scope="row" style="text-align: left">Email</th>
        <td><%= mail_to @student.email %></td>
      </tr>
      <% end -%>
      <tr>
        <th scope="row" style="text-align: left">Links</th>
        <td>
          <% @student.links.split(",").each do |link| %>
            <%= link_to(link, link) %><br>
          <% end %>
        </td>
      </tr>
    </table>
  </div>
</div>

<div class="row-fluid">
  <div class="span8">
    <h3>Skills</h3>
    <p>
      <%= @student.skills %>
    </p>
    <% if @student.courses.size != 0 %>
      <h3>Courses</h3>
      <ul>
        <% @student.courses.each do |course| %>
          <li><%= link_to course.title, course_path(course) %></li>
        <% end %>
      </ul>
    <% end %>
    <h3>Bio</h3>
    <p>
      <%= @student.bio %>
    </p>
  </div>
</div>

<div class="row-fluid">
  <button class="btn btn-primary">Download Resume</button>
  <% if current_user.is_admin? || (current_user.is_student? && current_user.student_id == @student.id) %>
    <%= link_to "Edit Profile", edit_student_path(@student), class: "btn btn-primary" %>
  <% end -%>
</div>

