<div class="row-fluid">
  <h1>Code Fellows Company Professionals</h1>
</div>

<div class="row-fluid">
  <% if @professionals.empty? %>
  Sorry, there aren't any professionals here yet...
  <% else %>
  <table id="professionals" class="table">
    <thead>
      <tr>
        <th>Partner Name</th>
        <th>Professional Name</th>
        <th>Professional Email</th>
        <th>Professional Phone Number</th>
        <th class="input-prepend">
          <span class="add-on"><i class="icon-filter"></i></span>
          <input id="professional-filter" type="text" class="search input-medium" placeholder="Filter Professionals" />
        </th>
      </tr>
    </thead>
    <tbody class="list">
      <% @professionals.each do |professional| %>
        <% professional.partners.each do |partner| %>
          <tr>
            <td class="partner_name"><%= partner.name %></td>
            <td class="professional_name"><%= professional.name %></td>
            <td class="professional_email"><%= professional.email %></td>
            <td class="professional_phone"><%= professional.phone_number %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <% end %>
</div>

<script>
  var options = {
    valueNames: ['partner_name', 'professional_name', 'professional_email', 'professional_phone']
  };

  var professionalsList = new List('professionals', options);
</script>
