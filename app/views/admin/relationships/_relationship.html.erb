<tr id="relationship[<%= relationship.id %>]">
  <% contact_allowed = relationship.contact_allowed? %>
  <td class="status_label"><%= render "status", locals: {contact_allowed: contact_allowed} %></td>
  <td><%= relationship.partner.name %></td>
  <td><%= relationship.student.name  %></td>
  <% if relationship.contact_allowed? %>
    <td><%= link_to "Destroy", admin_relationship_path(relationship),
              method: "delete",
              data: {
                confirm: "Are you sure?"
              },
              class: "btn btn-primary" %></td>
  <% else %>
    <td><%= link_to "Connect", admin_relationship_path(relationship),
              method: "put",
              remote: true,
              class: "btn btn-primary" %>
        <%= link_to "Destroy", admin_relationship_path(relationship),
              method: "delete",
              data: {
                confirm: "Are you sure?"
              },
              class: "btn btn-primary" %></td>
  <% end %>
</tr>