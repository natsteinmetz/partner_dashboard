<div class="row-fluid">
  <h1>Code Fellows Partners</h1>
</div>

<div class="row-fluid">
  <% if @partners.empty? %>
  Sorry, there aren't any partners here yet...
  <% else %>
  <table id = "partners" class="table index">
    <thead>
      <tr>
        <th class="sort" data-sort="name">Partner Name</th>
        <th>Partner Type</th>
        <th class="input-prepend">
          <span class="add-on"><i class="icon-filter"></i></span>
          <input id="partner-filter" type="text" class="search input-medium" placeholder="Filter Partners" />
        </th>
      </tr>
    </thead>
    <tbody class="list">
      <% @partners.each do |partner| %>
        <tr>
          <td class="name"><%= link_to partner.name, partner_path(partner) %></td>
          <td class="kind"><%= partner.kind %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% end %>
</div>

<script>
  var options ={
    valueNames: ['name', 'kind']
  };

  var partnersList = new List('partners', options);
</script>
